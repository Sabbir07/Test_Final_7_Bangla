<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

    <item>
        <shape android:shape="rectangle">
            <gradient
                      android:endColor="#999999" android:startColor="#cccccc" />
            <corners android:topLeftRadius="@dimen/emergency_layout_button_corner_radius"
                     android:topRightRadius="@dimen/emergency_layout_button_corner_radius"
                     android:bottomLeftRadius="0dp"
                     android:bottomRightRadius="0dp" />
        </shape>
    </item>


    <!-- Background -->
    <item
        android:left="0.5dp"
        android:right="1.5dp"
        android:top="0.5dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="@dimen/emergency_layout_button_corner_radius"
                    android:topRightRadius="@dimen/emergency_layout_button_corner_radius"
                    android:bottomLeftRadius="0dp"
                    android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</layer-list>