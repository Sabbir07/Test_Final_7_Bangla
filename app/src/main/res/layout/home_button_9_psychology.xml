        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/l_background_color_250"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView0"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:gravity="left|center_vertical"
                android:text="জিজ্ঞাসা"
                android:textColor="@drawable/l_text_color_99"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="20">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="19"
                    android:gravity="left|center_vertical"
                    android:text="মানসিক অসুস্থতা বলতে কি বোঝায়?"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="@dimen/font_size_internal_buttons"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="\u21E9"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="মানসিক অসুস্থতা হলো একধরনের মেডিকেল কন্ডিশন যেটা একজন মানুষের চিন্তাভাবনা, অনুভুতি, মেজাজ, অন্যদের সাথে মেশার ক্ষমতা এবং দৈনন্দিন কার্যক্ষমতার ওপরে প্রভাব ফেলে। ঠিক যেমন ডায়াবেটিক্স হলো অগ্নাশয়ের অসুখ, তেমনই মানসিক অসুস্থতা দৈনন্দিন জীবনের চাহিদা পূরনের সামর্থকে কমিয়ে দেয় এবং ক্ষতিগ্রস্থ করে।"
                android:textColor="@drawable/l_text_color_120"
                android:textSize="@dimen/font_size_14"/>




            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="20">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="19"
                    android:gravity="left|center_vertical"
                    android:text="গুরুতর মানসিক অসুস্থতা কোনগুলো?"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="@dimen/font_size_internal_buttons"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="top|center_horizontal"
                    android:text="\u21E9"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="গুরুতর মানসিক অসুস্থতার মধ্যে রয়েছে মারাত্মক বিষন্নতা, সিজোফ্রেনিয়া (বিভক্ত ব্যাক্তিতা), বাইপোলার ডিসঅর্ডার (bipolar disorder), ওসিডি (obsessive compulsive disorder), পিটিএসডি (post traumatic stress disorder) এবং বর্ডারলাইন পার্সনালিটি ডিসঅর্ডার (borderline personality disorder)। সকল মানসিক সমস্যাই ধারাবাহিক ভাবে একপর্যায়ে গিয়ে তীব্র আকার ধারন করে।"
                android:textColor="@drawable/l_text_color_120"
                android:textSize="@dimen/font_size_14"/>





            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="20">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="19"
                    android:gravity="left|center_vertical"
                    android:text="মানসিক অসুস্থতার পেছনে কারন কি?"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="@dimen/font_size_internal_buttons"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="\u21E9"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="যদিও বেশিরভাগ মানসিক অসুস্থতার সঠিক কারণ জানা যায় না, তবে এটি গবেষণার মাধ্যমে স্পষ্ট হয়ে উঠছে যে এই ধরনের সমস্যার অনেকগুলি জৈবিক, মনস্তাত্ত্বিক, এবং পরিবেশগত উৎপাদকের সংমিশ্রণ দ্বারা সৃষ্টি হয়।"
                android:textColor="@drawable/l_text_color_120"
                android:textSize="@dimen/font_size_14"/>





            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="20">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="19"
                    android:gravity="left|center_vertical"
                    android:text="কেউ কি মানসিক অসুস্থতা থেকে পুরোপুরি নিরাপদ?"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="@dimen/font_size_internal_buttons"/>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="\u21E9"
                    android:textColor="@drawable/l_text_color_33"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="মানসিক অসুস্থতা যে কোন বয়সের, জাতির, ধর্ম বা আয়ের ব্যক্তিদের প্রভাবিত করতে পারে। এই অসুস্থতাগুলি বাছবিচার করে না। যদিও মানসিক অসুস্থতা যে কারো ক্ষেত্রেই ঘটতে পারে, তবে বিশেষ কিছু মানসিক সমস্যা যেমন অতিরিক্ত খাওয়ার সমস্যা বেশিরভাগ ক্ষেত্রে মহিলাদের মধ্যে দেখা যায় এবং অন্যান্য অসুস্থতা যেমন মনোযোগের ঘাটতি / hyperactivity disorder সাধারণত শিশুদের মধ্যে বেশি দেখা যায়।"
                android:textColor="@drawable/l_text_color_120"
                android:textSize="@dimen/font_size_14"/>
        </LinearLayout>
